generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  entries   GlucoseEntry[]
}

model GlucoseEntry {
  id         String   @id @default(cuid())
  mgdl       Int
  recordedAt DateTime @default(now())
  note       String?
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}
