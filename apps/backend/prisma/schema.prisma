generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DiabetesType {
  TYPE_1
  TYPE_2
}

enum GlucoseUnit {
  MG_DL
  MMOL_L
}

enum Theme {
  LIGHT
  DARK
}

enum Language {
  ES
  EN
}

enum InsulinType {
  BASAL
  BOLUS
}

model User {
  id                      String         @id @default(cuid())
  email                   String         @unique
  password                String?
  firstName               String?
  lastName                String?
  avatarUrl               String?
  emailVerified           Boolean        @default(false)
  verificationToken       String?        @unique
  verificationTokenExpiry DateTime?
  resetPasswordToken      String?        @unique
  resetPasswordExpiry     DateTime?
  birthDate               DateTime?
  weight                  Float?
  diabetesType            DiabetesType?
  glucoseUnit             GlucoseUnit    @default(MG_DL)
  theme                   Theme          @default(LIGHT)
  language                Language       @default(ES)
  createdAt               DateTime       @default(now())
  entries                 GlucoseEntry[]
  accounts                Account[]
  refreshTokens           RefreshToken[]
  insulinDoses            InsulinDose[]
  meals                   Meal[]
}

model Account {
  id           String   @id @default(cuid())
  userId       String
  provider     String
  providerId   String
  accessToken  String?
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model GlucoseEntry {
  id         String   @id @default(cuid())
  mgdl       Int
  recordedAt DateTime @default(now())
  note       String?
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model InsulinDose {
  id         String      @id @default(cuid())
  userId     String
  units      Float
  recordedAt DateTime    @default(now())
  type       InsulinType
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Meal {
  id            String   @id @default(cuid())
  userId        String
  name          String
  carbohydrates Float?
  recordedAt    DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
