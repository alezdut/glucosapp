{
  "expo": {
    "name": "Glucosapp Mobile",
    "slug": "glucosapp-mobile",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "extra": {
      "eas": {
        "projectId": "glucosapp-mobile"
      }
    },
    "scheme": "glucosapp",
    "platforms": ["ios", "android", "web"],
    "orientation": "portrait",
    "newArchEnabled": false,
    "plugins": [
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Glucosapp to access your camera to scan food items."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Glucosapp to save scanned images to your photo library.",
          "savePhotosPermission": "Allow Glucosapp to save scanned images to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "experiments": {
      "typedRoutes": false
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "ios": {
      "bundleIdentifier": "com.glucosapp.mobile",
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["glucosapp"]
          }
        ],
        "NFCReaderUsageDescription": "Glucosapp necesita acceso a NFC para leer datos de tu sensor FreeStyle Libre."
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": ["TAG"]
      }
    },
    "android": {
      "package": "com.glucosapp.mobile",
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "glucosapp",
              "host": "auth",
              "pathPrefix": "/callback"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    }
  }
}
